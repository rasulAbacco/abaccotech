generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Payment {
  id            Int      @id @default(autoincrement())
  orderId       String   @unique
  paymentId     String? // nullable until payment success
  signature     String? // nullable until payment success
  customerEmail String?
  customerName  String?
  phoneNumber   String? // yes, add this
  amount        Int
  status        String   @default("PENDING") // start as pending
  plan          String? // ✅ store selected plan name
  planPrice     Int? // ✅ store plan base price
  addOns        String? // ✅ store JSON array of add-ons
  createdAt     DateTime @default(now())
}
